<div class="row">
  <div class="col-md-9">
    <form>
      <div class="form-group">
        <label for="name">Restaurant name</label>
        {{input value=name id=name placeholder="Restaurant name" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="cuisine">Cuisine type</label>
        {{input value=cuisine id=cuisine placeholder="Cuisine" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="address">Address</label>
        {{input value=address id=address placeholder="Address" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="phone">Contact</label>
        {{input value=phone id=phone placeholder="phone number" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="image">image</label>
        {{input value=image id=image placeholder="image link" class="form-control"}}
      </div>
      <button {{action 'save'}} class="btn btn-default">Save</button>
    </form>
  </div>
</div>
