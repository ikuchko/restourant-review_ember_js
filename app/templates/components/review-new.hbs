<form>
  <div class="form-group review--rating">
    {{star-rating rating=rating on-click="updateRating"}}
  </div>
  <div class="form-group">
    {{input value=name id=name placeholder="Enter your name" class="form-control"}}
  </div>
  <div class="form-group">
    {{textarea value=review id=review rows="4" placeholder="Your review here..." class="form-control"}}
  </div>
  <button {{action 'addReview' restaurant}} class="btn btn-success">Add</button>
</form>
